<?xml version="1.0" encoding="utf-8"?>
<!-- Created by Kelley Rosa 05-22-25 -->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_drk_blue"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- =========== Keyword Setting Title =========== -->
        <TextView
            android:id="@+id/settingsTitle"
            android:text="@string/keyword_settings"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/muted_white"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- =========== Keyword Input Box =========== -->
        <EditText
            android:id="@+id/inputKeyword"
            android:hint="@string/enter_a_keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:textColor="@color/muted_white"
            android:textColorHint="@color/muted_grey"
            android:fontFamily="sans-serif" />

        <!-- =========== Button Row =========== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- =========== Add Button =========== -->
            <Button
                android:id="@+id/btnAdd"
                android:text="@string/add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:backgroundTint="@color/accent_teal"
                android:textColor="@color/muted_white"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:letterSpacing="0.02"
                android:textAllCaps="false" />

            <!-- =========== Edit Button =========== -->
            <Button
                android:id="@+id/btnEdit"
                android:text="@string/edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="6dp"
                android:backgroundTint="@color/accent_blue"
                android:textColor="@color/muted_white"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:letterSpacing="0.02"
                android:textAllCaps="false" />

            <!-- =========== Delete Button =========== -->
            <Button
                android:id="@+id/btnDelete"
                android:text="@string/delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:backgroundTint="@color/accent_red"
                android:textColor="@color/muted_white"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:letterSpacing="0.02"
                android:textAllCaps="false" />
        </LinearLayout>

        <!-- =========== Saved Keywords Title/Header =========== -->
        <TextView
            android:id="@+id/listHeader"
            android:text="@string/saved_keywords"
            android:textColor="@color/muted_white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- =========== Keyword List =========== -->
        <ListView
            android:id="@+id/listKeywords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/bg_blue"
            android:dividerHeight="1dp"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>