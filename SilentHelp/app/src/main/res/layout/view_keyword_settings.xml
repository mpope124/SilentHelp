<?xml version="1.0" encoding="utf-8"?>
<!-- Created by Kelley Rosa 05-22-25 -->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_drk_blue"
    android:padding="0dp">

    <LinearLayout
        android:id="@+id/keyword_settings_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ========== Header with page title and back arrow ========== -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar_keyword_settings"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/bg_blue"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <!-- Back Arrow -->
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back_white"
                android:contentDescription="@string/back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Header -->
            <TextView
                android:id="@+id/keyword_settings_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/keyword_settings"
                android:textColor="@color/white_70"
                android:textSize="18sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ========== Card: Add New Keyword ========== -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/bg_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Add New Keyword Header -->
                <TextView
                    android:text="@string/add_new_keyword"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- Enter Keyword Text Input Layout -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_keyword"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                    app:boxBackgroundColor="@color/bg_lt_blue"
                    app:boxStrokeColor="@color/white"
                    app:hintTextColor="@color/white_70"
                    app:helperTextTextColor="@color/white_70"
                    android:textColorHint="@color/white_70">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_new_keyword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white_70"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Spinner Select Threat Level -->
                <Spinner
                    android:id="@+id/spinner_threat_level"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Add Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_keyword"
                    android:text="@string/add"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="4dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:cornerRadius="12dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/white"
                    android:textColor="@color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ========== Card: Level 1 - Social Exit ========== -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/bg_blue"> <!-- Change this per level if desired -->

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Header Title -->
                <TextView
                    android:id="@+id/title_level1"
                    android:text="Level 1: Social Exit"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- Keyword List RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_level1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:clipToPadding="false"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>