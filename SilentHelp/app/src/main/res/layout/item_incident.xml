<?xml version="1.0" encoding="utf-8"?>
<!--added by Michael-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="@color/bg_level_2">

    <LinearLayout
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--TITLE-->
        <TextView android:id="@+id/textTitle"
            android:text="(MM/DD) Level #"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--TIMESTAMP-->
        <TextView android:id="@+id/textDate"
            android:text="MM/DD/YY hh:mm:ss"
            android:textColor="@color/muted_grey"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="#19423f" />

        <!-- KEYWORDS -->
        <TextView
            android:id="@+id/textKeywords"
            android:text="Keywords Listed Here"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--SEVERITY THREAT LEVEL-->
        <TextView
            android:id="@+id/textSeverity"
            android:text="Threat Level #"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--CONTACT-->
        <TextView
            android:id="@+id/textContacts"
            android:text="Contacts Listed Here"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--LOCATION-->
        <TextView
            android:id="@+id/textLocation"
            android:text="00.0000, 000.0000"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--AMBIENT AUDIO (IF LEVEL 2 >)-->
        <ImageButton
            android:id="@+id/btnPlayAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@android:drawable/ic_media_play"
            android:backgroundTint="@color/accent_teal"
            android:contentDescription="@string/play_audio"
            android:visibility="gone"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>