<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_level_2"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:clipToPadding="false">

    <!-- Keyword Text -->
    <TextView
        android:id="@+id/text_keyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Threat Level Label -->
    <TextView
        android:id="@+id/text_threat_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white_70"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp" />

    <!-- Edit/Delete Buttons (hidden by default) -->
    <LinearLayout
        android:id="@+id/edit_delete_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:visibility="gone"
        android:layout_marginTop="8dp">

        <!-- Edit Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit_keyword"
            android:text="@string/edit"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="12dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/white"
            android:textColor="@color/white" />

        <!-- Delete Icon -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete_keyword"
            android:text="@string/delete"
            android:textAllCaps="false"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="12dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/white"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
</ScrollView>