<?xml version="1.0" encoding="utf-8"?>
<!-- Created by Kelley Rosa 05-22-25 -->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_drk_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <!-- Top Header Bar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/bg_blue"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <!-- Back Arrow -->
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back_white"
                android:contentDescription="@string/back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Keyword Settings Header -->
            <TextView
                android:id="@+id/keyword_settings_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/keyword_settings"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Add New Keyword Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/bg_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Add New Keyword Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_new_keyword"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Enter Keyword Textbox -->
                <EditText
                    android:id="@+id/input_new_keyword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textCursorDrawable="@drawable/cursor_white"
                    android:hint="@string/enter_keyword"
                    android:importantForAutofill="no"
                    android:minHeight="48dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:background="@drawable/bg_keyword_settings_input_textbox"
                    android:padding="10dp"
                    android:inputType="text" />

                <!-- Select Threat Level Spinner -->
                <Spinner
                    android:id="@+id/spinner_threat_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:background="@drawable/bg_spinner_rounded"
                    android:popupBackground="@drawable/bg_spinner_rounded"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp" />

                <!-- Add Button -->
                <Button
                    android:id="@+id/btn_add_keyword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/accent_teal" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- LEVEL 1 CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/bg_level_1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Level 1: Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_1_social_exit"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Level 1: Keyword List -->
                <TextView
                    android:id="@+id/list_level1_keywords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_keywords_added"
                    android:textColor="@color/white_90"
                    android:textSize="17sp"
                    android:layout_marginTop="4dp" />

                <!-- Level 1: Edit Keywords Link -->
                <TextView
                    android:id="@+id/link_edit_level1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_keywords"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- LEVEL 2 CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/bg_level_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Level 2: Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_2_low"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Level 2: Keyword List -->
                <TextView
                    android:id="@+id/list_level2_keywords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_keywords_added"
                    android:textColor="@color/white_90"
                    android:textSize="17sp"
                    android:layout_marginTop="4dp" />

                <!-- Level 2: Edit Keywords Link -->
                <TextView
                    android:id="@+id/link_edit_level2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_keywords"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- LEVEL 3 CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/bg_level_3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Level 3: Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_3_medium"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Level 3: Keyword List -->
                <TextView
                    android:id="@+id/list_level3_keywords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_keywords_added"
                    android:textColor="@color/white_90"
                    android:textSize="17sp"
                    android:layout_marginTop="4dp" />

                <!-- Level 3: Edit Keywords Link -->
                <TextView
                    android:id="@+id/link_edit_level3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_keywords"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- LEVEL 4 CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/bg_level_4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Level 4: Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_4_high"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Level 4: Keyword List -->
                <TextView
                    android:id="@+id/list_level4_keywords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_keywords_added"
                    android:textColor="@color/white_90"
                    android:textSize="17sp"
                    android:layout_marginTop="4dp" />

                <!-- Level 4: Edit Keywords Link -->
                <TextView
                    android:id="@+id/link_edit_level4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_keywords"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>